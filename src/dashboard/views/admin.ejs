<!DOCTYPE html>
<html lang="de">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Control Center - LawNet Tickets</title>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }

        .glass-card {
            background: rgba(30, 41, 59, 0.5);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.08);
        }

        .btn-glow:hover {
            box-shadow: 0 0 24px rgba(245, 158, 11, 0.5);
        }

        .status-badge {
            @apply px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider;
        }

        .modal-backdrop {
            backdrop-filter: blur(4px);
        }
    </style>
</head>

<body class="bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 text-slate-100 min-h-screen">
    <%- include('partials/sidebar', { path: '/admin' , user: user }) %>

        <script id="admin-data" type="application/json">
        <%- JSON.stringify({ tickets, settings, users, currentUser: { id: user.id, username: user.username } }) %>
    </script>

        <div class="md:ml-64 min-h-screen">
            <main class="max-w-[1800px] mx-auto px-4 sm:px-6 lg:px-8 py-8" x-data="adminPanel">
                <!-- Header -->
                <div class="mb-8 flex justify-between items-end">
                    <div class="flex items-center gap-4">
                        <img src="/img/logo.png" alt="LawNet Logo" class="h-16 w-auto drop-shadow-lg rounded-2xl">
                        <div>
                            <h1 class="text-4xl font-extrabold text-white tracking-tight mb-1">
                                <span class="text-[#fe8900]">Admin</span> Control Center
                            </h1>
                            <p class="text-slate-400 text-lg">Zentrale Verwaltung f√ºr Tickets & Bot</p>
                        </div>
                    </div>
                    <div x-show="permissionStatus !== 'granted'" class="mb-2">
                        <button @click="requestPermission()"
                            class="flex items-center gap-2 px-4 py-2 bg-slate-800 hover:bg-slate-700 text-slate-200 rounded-lg transition-colors border border-slate-700">
                            <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9">
                                </path>
                            </svg>
                            <span>Benachrichtigungen aktivieren</span>
                        </button>
                    </div>
                    <div x-show="permissionStatus === 'granted' && notificationsEnabled" class="mb-2">
                        <span
                            class="flex items-center gap-2 px-4 py-2 bg-green-900/20 text-green-400 rounded-lg border border-green-900/50">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Live-Benachrichtigungen aktiv</span>
                        </span>
                    </div>
                </div>

                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                    <div class="glass-card p-6 rounded-2xl hover:border-amber-500/30 transition-all">
                        <div class="flex items-center justify-between mb-3">
                            <span class="text-slate-400 text-sm font-semibold uppercase tracking-wider">Gesamt</span>
                            <div class="p-2.5 bg-blue-500/10 rounded-xl">
                                <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                                    </path>
                                </svg>
                            </div>
                        </div>
                        <div class="text-3xl font-extrabold text-white">
                            <%= stats.total %>
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Alle Tickets</p>
                    </div>

                    <div class="glass-card p-6 rounded-2xl hover:border-green-500/30 transition-all">
                        <div class="flex items-center justify-between mb-3">
                            <span class="text-slate-400 text-sm font-semibold uppercase tracking-wider">Offen</span>
                            <div class="p-2.5 bg-green-500/10 rounded-xl">
                                <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="text-3xl font-extrabold text-white">
                            <%= stats.open %>
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Aktive Tickets</p>
                    </div>

                    <div class="glass-card p-6 rounded-2xl hover:border-amber-500/30 transition-all">
                        <div class="flex items-center justify-between mb-3">
                            <span class="text-slate-400 text-sm font-semibold uppercase tracking-wider">Heute</span>
                            <div class="p-2.5 bg-amber-500/10 rounded-xl">
                                <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                    </path>
                                </svg>
                            </div>
                        </div>
                        <div class="text-3xl font-extrabold text-white">
                            <%= stats.closedToday %>
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Geschlossen heute</p>
                    </div>

                    <div class="glass-card p-6 rounded-2xl hover:border-red-500/30 transition-all">
                        <div class="flex items-center justify-between mb-3">
                            <span class="text-slate-400 text-sm font-semibold uppercase tracking-wider">Wartung</span>
                            <div class="p-2.5 rounded-xl"
                                :class="settings.maintenance === 'true' ? 'bg-red-500/10' : 'bg-slate-700/30'">
                                <svg class="w-5 h-5"
                                    :class="settings.maintenance === 'true' ? 'text-red-400' : 'text-slate-500'"
                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                                    </path>
                                </svg>
                            </div>
                        </div>
                        <div class="text-lg font-bold"
                            :class="settings.maintenance === 'true' ? 'text-red-400' : 'text-slate-400'"
                            x-text="settings.maintenance === 'true' ? 'AKTIV' : 'INAKTIV'"></div>
                        <p class="text-xs text-slate-500 mt-1">Maintenance Mode</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 xl:grid-cols-4 gap-8">
                    <!-- Bot Settings Sidebar -->
                    <div class="xl:col-span-1">
                        <div class="glass-card p-6 rounded-2xl sticky top-8">
                            <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
                                <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z">
                                    </path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                Bot-Steuerung
                            </h2>

                            <div class="space-y-5">
                                <div>
                                    <label class="block text-sm font-semibold text-slate-300 mb-2">Maintenance
                                        Mode</label>
                                    <button @click="toggleMaintenance()"
                                        :class="settings.maintenance === 'true' ? 'bg-red-500/20 text-red-300 border-red-500/40 hover:bg-red-500/30' : 'bg-slate-800/50 text-slate-300 border-slate-700/50 hover:bg-slate-700/50'"
                                        class="w-full py-3 rounded-xl border-2 font-bold transition-all flex items-center justify-center gap-2.5">
                                        <span class="w-2.5 h-2.5 rounded-full"
                                            :class="settings.maintenance === 'true' ? 'bg-red-500 animate-pulse' : 'bg-slate-500'"></span>
                                        <span
                                            x-text="settings.maintenance === 'true' ? 'DEAKTIVIEREN' : 'AKTIVIEREN'"></span>
                                    </button>
                                </div>

                                <hr class="border-slate-700/50">

                                <div>
                                    <label class="block text-sm font-semibold text-slate-300 mb-2">Status Text</label>
                                    <input type="text" x-model="settings.bot_activity"
                                        class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl px-4 py-2.5 text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all">
                                </div>

                                <div>
                                    <label
                                        class="block text-sm font-semibold text-slate-300 mb-2">Aktivit√§ts-Typ</label>
                                    <select x-model="settings.bot_activity_type"
                                        class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all">
                                        <option value="PLAYING">üéÆ Spielt</option>
                                        <option value="WATCHING">üëÄ Schaut</option>
                                        <option value="LISTENING">üéß H√∂rt</option>
                                        <option value="COMPETING">üèÜ Tritt an</option>
                                    </select>
                                </div>

                                <div>
                                    <label class="block text-sm font-semibold text-slate-300 mb-2">Bot Status</label>
                                    <select x-model="settings.bot_status"
                                        class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition-all">
                                        <option value="online">üü¢ Online</option>
                                        <option value="idle">üü° Abwesend</option>
                                        <option value="dnd">üî¥ Nicht st√∂ren</option>
                                    </select>
                                </div>

                                <button @click="savePresence()"
                                    class="w-full py-3 bg-gradient-to-r from-amber-600 to-amber-600 hover:from-amber-500 hover:to-amber-500 text-white font-bold rounded-xl btn-glow transition-all shadow-lg">
                                    Pr√§senz Aktualisieren
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Ticket Management -->
                    <div class="xl:col-span-3">
                        <div class="glass-card rounded-2xl overflow-hidden">
                            <!-- Header with Filters -->
                            <div class="p-6 border-b border-slate-700/50">
                                <div
                                    class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                                    <h2 class="text-2xl font-bold text-white">Ticket Management</h2>

                                    <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
                                        <!-- Status Filter -->
                                        <div class="flex gap-2 bg-slate-800/50 p-1 rounded-lg">
                                            <button @click="filterStatus = 'all'"
                                                :class="filterStatus === 'all' ? 'bg-amber-600 text-white' : 'text-slate-400 hover:text-white'"
                                                class="px-4 py-2 rounded-md text-sm font-semibold transition-all">
                                                Alle
                                            </button>
                                            <button @click="filterStatus = 'open'"
                                                :class="filterStatus === 'open' ? 'bg-green-600 text-white' : 'text-slate-400 hover:text-white'"
                                                class="px-4 py-2 rounded-md text-sm font-semibold transition-all">
                                                Offen
                                            </button>
                                            <button @click="filterStatus = 'closed'"
                                                :class="filterStatus === 'closed' ? 'bg-slate-600 text-white' : 'text-slate-400 hover:text-white'"
                                                class="px-4 py-2 rounded-md text-sm font-semibold transition-all">
                                                Geschlossen
                                            </button>
                                        </div>

                                        <!-- Search -->
                                        <div class="relative">
                                            <input type="text" x-model="search" placeholder="Suchen..."
                                                class="bg-slate-800/50 border border-slate-700/50 rounded-lg pl-10 pr-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500/50 w-full sm:w-64 transition-all">
                                            <svg class="w-4 h-4 text-slate-500 absolute left-3 top-1/2 -translate-y-1/2"
                                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </div>

                                <!-- Results Count -->
                                <div class="mt-4 text-sm text-slate-400">
                                    <span x-text="filteredTickets.length"></span> Ticket(s) gefunden
                                </div>
                            </div>

                            <!-- Tickets List -->
                            <div class="divide-y divide-slate-700/30">
                                <template x-for="ticket in filteredTickets" :key="ticket.id">
                                    <div class="p-6 hover:bg-slate-800/30 transition-all">
                                        <div class="flex flex-col gap-4">
                                            <!-- Ticket Header -->
                                            <div class="flex items-start justify-between gap-4">
                                                <div class="flex-1 min-w-0">
                                                    <div class="flex items-center gap-3 mb-2 flex-wrap">
                                                        <span class="text-lg font-bold text-amber-400 font-mono"
                                                            x-text="'#' + ticket.id"></span>
                                                        <div class="px-6 py-4">
                                                            <span
                                                                class="px-3 py-1 rounded-full text-xs font-medium border"
                                                                :class="{
                                                                    'bg-emerald-500/10 text-emerald-400 border-emerald-500/20': ticket.status === 'open',
                                                                    'bg-slate-700/50 text-slate-400 border-slate-600/30 text-decoration-line-through': ticket.status === 'closed'
                                                                }">
                                                                <span
                                                                    x-text="ticket.status === 'open' ? 'Offen' : 'Geschlossen'"></span>
                                                            </span>

                                                        </div>
                                                        <!-- Tags -->
                                                        <template x-if="ticket.tags">
                                                            <template x-for="tag in JSON.parse(ticket.tags || '[]')"
                                                                :key="tag">
                                                                <span
                                                                    class="px-2 py-1 bg-amber-500/10 text-amber-300 text-xs font-semibold rounded border border-amber-500/20"
                                                                    x-text="tag"></span>
                                                            </template>
                                                        </template>
                                                    </div>

                                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
                                                        <div class="flex items-center gap-2 text-slate-300">
                                                            <svg class="w-4 h-4 text-slate-500" fill="none"
                                                                stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                                                </path>
                                                            </svg>
                                                            <span class="font-medium"
                                                                x-text="ticket.user_name || ticket.user_id"
                                                                :title="ticket.user_id"></span>
                                                        </div>

                                                        <!-- Assigned To -->
                                                        <div class="flex items-center gap-2"
                                                            :class="ticket.assigned_to ? 'text-amber-300' : 'text-slate-500'">
                                                            <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z">
                                                                </path>
                                                            </svg>
                                                            <span class="font-medium"
                                                                x-text="ticket.assigned_to ? `Zugewiesen: ${ticket.assignee_name || ticket.assigned_to}` : 'Nicht zugewiesen'"
                                                                :title="ticket.assigned_to"></span>
                                                        </div>

                                                        <div class="flex items-center gap-2 text-slate-300"
                                                            x-show="ticket.product">
                                                            <svg class="w-4 h-4 text-slate-500" fill="none"
                                                                stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z">
                                                                </path>
                                                            </svg>
                                                            <span x-text="ticket.product || '-'"></span>
                                                        </div>

                                                        <div class="flex items-center gap-2 text-slate-300"
                                                            x-show="ticket.topic">
                                                            <svg class="w-4 h-4 text-slate-500" fill="none"
                                                                stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z">
                                                                </path>
                                                            </svg>
                                                            <span class="truncate" x-text="ticket.topic || '-'"></span>
                                                        </div>

                                                        <div
                                                            class="flex items-center gap-2 text-slate-400 text-xs col-span-2">
                                                            <svg class="w-4 h-4 text-slate-500" fill="none"
                                                                stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z">
                                                                </path>
                                                            </svg>
                                                            <span
                                                                x-text="new Date(ticket.created_at).toLocaleString('de-DE')"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Actions -->
                                            <div class="flex flex-wrap items-center gap-2">
                                                <!-- Assign to me -->
                                                <template x-if="ticket.status === 'open' && !ticket.assigned_to">
                                                    <div class="flex gap-2">
                                                        <button @click="assignToMe(ticket.id)"
                                                            class="px-3 py-2 bg-amber-600/20 hover:bg-amber-600/30 text-amber-300 border border-amber-600/30 rounded-lg text-sm font-semibold transition-all flex items-center gap-2"
                                                            title="Mir zuweisen">
                                                            <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                                                </path>
                                                            </svg>
                                                            Mir zuweisen
                                                        </button>
                                                        <button @click="assignToUser(ticket.id)"
                                                            class="px-3 py-2 bg-slate-700/50 hover:bg-slate-700 text-slate-300 border border-slate-600/30 rounded-lg text-sm font-semibold transition-all flex items-center gap-2"
                                                            title="Anderem User zuweisen">
                                                            <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z m15-6h6m-3-3v6">
                                                                </path>
                                                            </svg>
                                                        </button>
                                                        <button @click="addUser(ticket.id)"
                                                            class="px-3 py-2 bg-slate-700/50 hover:bg-slate-700 text-slate-300 border border-slate-600/30 rounded-lg text-sm font-semibold transition-all flex items-center gap-2"
                                                            title="Supporter hinzuf√ºgen">
                                                            <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z">
                                                                </path>
                                                            </svg>
                                                        </button>
                                                    </div>
                                                </template>

                                                <!-- Unassign / Reassign -->
                                                <template x-if="ticket.status === 'open' && ticket.assigned_to">
                                                    <div class="flex gap-2">
                                                        <button @click="unassignTicket(ticket.id)"
                                                            class="px-3 py-2 bg-red-500/10 hover:bg-red-500/20 text-red-300 border border-red-500/20 rounded-lg text-sm font-semibold transition-all flex items-center gap-2"
                                                            title="Zuweisung aufheben">
                                                            <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                                            </svg>
                                                            Aufheben
                                                        </button>
                                                        <button @click="assignToUser(ticket.id)"
