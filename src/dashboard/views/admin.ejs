                            allUsers: data.users || [],
                            showTranscriptModal: false,
                            transcriptUrl: '',

                            showTranscriptModal: false,
                            transcriptUrl: '',

                            notificationsEnabled: false,
                            permissionStatus: Notification.permission,
                            socket: null,

                            init() {
                                this.checkPermission();

                                // Reliable Polling Fallback (every 10s)
                                // This ensures updates happen even if WebSocket fails (e.g. Nginx config issues)
                                this.pollTickets();
                                setInterval(() => {
                                    this.pollTickets();
                                }, 10000);

                                // Real-time WebSocket
                                try {
                                    this.socket = io({
                                        transports: ['websocket', 'polling']
                                    });

                                    this.socket.on('connect', () => {
                                        console.log('‚úÖ Connected to WebSocket server');
                                    });

                                    this.socket.on('connect_error', (err) => {
                                        console.error('‚ùå WebSocket Connection Failed:', err);
                                    });

                                    this.socket.on('update_tickets', (data) => {
                                        console.log('‚ö° Received live update:', data);
                                        this.pollTickets(data);
                                    });
                                } catch (e) {
                                    console.error('Socket init error:', e);
                                }
                            },

                            checkPermission() {
                                this.permissionStatus = Notification.permission;
                                if (this.permissionStatus === 'granted') {
                                    this.notificationsEnabled = true;
                                }
                            },

                            async requestPermission() {
                                const permission = await Notification.requestPermission();
                                this.permissionStatus = permission;
                                if (permission === 'granted') {
                                    this.notificationsEnabled = true;
                                    new Notification('Benachrichtigungen aktiviert', {
                                        body: 'Du wirst nun √ºber neue Tickets informiert.',
                                        icon: 'https://cdn.discordapp.com/embed/avatars/0.png'
                                    });
                                }
                            },

                            async pollTickets(triggerData = null) {
                                try {
                                    const res = await fetch('/api/tickets');
                                    const data = await res.json();
                                    const newTickets = data.tickets;

                                    if (triggerData && triggerData.action === 'created' && this.notificationsEnabled) {
                                        // If we got a direct push event, notify!
                                        // Find the new ticket (assuming ID is passed)
                                        // or just assume latest
                                        const latest = newTickets[0];
                                        this.sendNotification('üé´ Neues Ticket (Live)', `${latest.user_id} hat ein Ticket erstellt.`);
                                        this.showToast('Neues Ticket empfangen!', 'info');
                                    } else if (newTickets.length > this.tickets.length && !triggerData) {
                                        // Fallback if polling picked it up
                                        this.showToast('Neues Ticket gefunden (Sync)', 'info');
                                    }

                                    this.tickets = newTickets;
                                } catch (e) {
                                    console.error('Fetch error:', e);
                                }
                            },

                            sendNotification(title, body) {
                                if (Notification.permission === 'granted' && this.notificationsEnabled) {
                                    new Notification(title, {
                                        body: body,
                                        icon: 'https://cdn.discordapp.com/embed/avatars/0.png'
                                    });
                                }
                            },

                            showDeleteModal: false,
                            deleteTicketId: null,
                            toasts: [],
                            // ... rest of data object

                            showCloseModal: false,
                            closeTicketId: null,
                            closeTicketRating: 5,
                            closeTicketComment: '',

                            showToast(message, type = 'success') {
                                const id = Date.now();
                                this.toasts.push({ id, message, type });
                                setTimeout(() => {
                                    this.toasts = this.toasts.filter(t => t.id !== id);
                                }, 3000);
                            },

                            get filteredUsers() {
                                if (!this.assignSearch) return this.allUsers;
                                const s = this.assignSearch.toLowerCase();
                                return this.allUsers.filter(u =>
                                    u.displayName.toLowerCase().includes(s) ||
                                    u.username.toLowerCase().includes(s)
                                );
                            },

                            get filteredTickets() {
                                let filtered = this.tickets;

                                if (this.filterStatus !== 'all') {
                                    filtered = filtered.filter(t => t.status === this.filterStatus);
                                }

                                if (this.search) {
                                    const s = this.search.toLowerCase();
                                    filtered = filtered.filter(t =>
                                        t.id.toString().includes(s) ||
                                        t.user_id.toLowerCase().includes(s) ||
                                        (t.username && t.username.toLowerCase().includes(s)) ||
                                        (t.topic && t.topic.toLowerCase().includes(s)) ||
                                        (t.product && t.product.toLowerCase().includes(s)) ||
                                        (t.assigned_to && t.assigned_to.toLowerCase().includes(s))
                                    );
                                }

                                return filtered;
                            },

                            async toggleMaintenance() {
                                const newValue = this.settings.maintenance === 'true' ? 'false' : 'true';
                                await this.updateSetting('maintenance', newValue);
                                this.settings.maintenance = newValue;
                            },

                            async savePresence() {
                                const keys = ['bot_status', 'bot_activity', 'bot_activity_type'];
                                for (const key of keys) {
                                    await this.updateSetting(key, this.settings[key]);
                                }
                                this.showToast('‚úÖ Bot-Pr√§senz wurde erfolgreich aktualisiert!', 'success');
                            },

                            async updateSetting(key, value) {
                                try {
                                    const res = await fetch('/api/bot/settings', {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({ key, value })
                                    });
                                    return await res.json();
                                } catch (e) {
                                    console.error('Failed to update setting', e);
                                    this.showToast('‚ùå Fehler beim Aktualisieren der Einstellung', 'error');
                                }
                            },

                            async assignToMe(id, specificUserId = null) {
                                try {
                                    const targetId = specificUserId || this.currentUser.id;

                                    const res = await fetch(`/api/tickets/${id}/assign`, {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({
                                            supporterId: targetId
                                        })
                                    });
                                    const data = await res.json();

                                    if (data.success) {
                                        const ticket = this.tickets.find(t => t.id === id);
                                        if (ticket) {
                                            ticket.assigned_to = targetId;
                                            // Normally we would refetch the name, but for UI feedback we can set it optimistically
                                            ticket.assigned_username = (targetId === this.currentUser.id) ? this.currentUser.username : 'ID: ' + targetId;
                                        }
                                        this.showToast('‚úÖ Ticket wurde zugewiesen!', 'success');
                                        location.reload(); // Reload to get proper username if assigning to others
                                    } else {
                                        this.showToast('‚ùå Fehler: ' + data.error, 'error');
                                    }
                                } catch (e) {
                                    console.error('Assignment error:', e);
                                    this.showToast('‚ùå Netzwerkfehler', 'error');
                                }
                            },

                            async unassignTicket(id) {


                                try {
                                    const res = await fetch(`/api/tickets/${id}/assign`, {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({
                                            supporterId: null
                                        })
                                    });
                                    const data = await res.json();

                                    if (data.success) {
                                        const ticket = this.tickets.find(t => t.id === id);
                                        if (ticket) {
                                            ticket.assigned_to = null;
                                            ticket.assigned_username = null;
                                        }
                                        this.showToast('‚úÖ Zuweisung aufgehoben!', 'success');
                                    } else {
                                        this.showToast('‚ùå Fehler: ' + data.error, 'error');
                                    }
                                } catch (e) {
                                    console.error('Unassignment error:', e);
                                    this.showToast('‚ùå Netzwerkfehler', 'error');
                                }
                            },

                            openAssignModal(id, mode = 'assign') {
                                this.assignTicketId = id;
                                this.assignMode = mode;
                                this.assignSearch = '';
                                this.selectedAssignUser = null;
                                this.showAssignModal = true;
                            },

                            async confirmAssign() {
                                if (!this.selectedAssignUser) return;

                                const endpoint = this.assignMode === 'add'
                                    ? `/api/tickets/${this.assignTicketId}/add-supporter`
                                    : `/api/tickets/${this.assignTicketId}/assign`;

                                const body = { supporterId: this.selectedAssignUser };

                                try {
                                    const res = await fetch(endpoint, {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify(body)
                                    });
                                    const result = await res.json();

                                    if (result.success) {
                                        this.showToast(this.assignMode === 'add' ? '‚úÖ User hinzugef√ºgt!' : '‚úÖ Ticket zugewiesen!', 'success');
                                        location.reload();
                                    } else {
                                        this.showToast('‚ùå Fehler: ' + result.error, 'error');
                                    }
                                } catch (e) {
                                    console.error('Assignment error:', e);
                                    this.showToast('‚ùå Netzwerkfehler', 'error');
                                }

                                this.showAssignModal = false;
                            },

                            addUser(id) {
                                this.openAssignModal(id, 'add');
                            },

                            assignToUser(id) {
                                this.openAssignModal(id, 'assign');
                            },

                            openRenameModal(ticket) {
                                this.renameTicketId = ticket.id;
                                this.renameValue = ticket.thread_name || `ticket-${ticket.id}`;
                                this.showRenameModal = true;
                            },

                            async confirmRename() {
                                if (!this.renameValue.trim()) {
                                    this.showToast('‚ùå Name darf nicht leer sein', 'error');
                                    return;
                                }

                                try {
                                    const res = await fetch(`/api/tickets/${this.renameTicketId}/rename`, {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({ newName: this.renameValue.trim() })
                                    });
                                    const data = await res.json();

                                    if (data.success) {
                                        const ticket = this.tickets.find(t => t.id === this.renameTicketId);
                                        if (ticket) ticket.thread_name = this.renameValue.trim();
                                        this.showRenameModal = false;
                                        this.showToast('‚úÖ Thread wurde umbenannt!', 'success');
                                    } else {
                                        this.showToast('‚ùå Fehler: ' + data.error, 'error');
                                    }
                                } catch (e) {
                                    console.error('Rename error:', e);
                                    this.showToast('‚ùå Netzwerkfehler', 'error');
                                }
                            },

                            openTagModal(ticket) {
                                this.tagTicketId = ticket.id;
                                try {
                                    this.tagValues = ticket.tags ? JSON.parse(ticket.tags) : [];
                                } catch (e) {
                                    this.tagValues = [];
                                }
                                this.newTag = '';
                                this.showTagModal = true;
                            },

                            addTag() {
                                if (this.newTag.trim() && !this.tagValues.includes(this.newTag.trim())) {
                                    this.tagValues.push(this.newTag.trim());
                                    this.newTag = '';
                                }
                            },

                            removeTag(index) {
                                this.tagValues.splice(index, 1);
                            },

                            async confirmTags() {
                                try {
                                    const res = await fetch(`/api/tickets/${this.tagTicketId}/tags`, {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({ tags: this.tagValues })
                                    });
                                    const data = await res.json();

                                    if (data.success) {
                                        const ticket = this.tickets.find(t => t.id === this.tagTicketId);
                                        if (ticket) ticket.tags = JSON.stringify(this.tagValues);
                                        this.showTagModal = false;
                                        this.showToast('‚úÖ Tags wurden gespeichert!', 'success');
                                    } else {
                                        this.showToast('‚ùå Fehler: ' + data.error, 'error');
                                    }
                                } catch (e) {
                                    console.error('Tags error:', e);
                                    this.showToast('‚ùå Netzwerkfehler', 'error');
                                }
                            },

                            closeTicket(id) {
                                this.closeTicketId = id;
                                this.showCloseModal = true;
                            },

                            async confirmClose() {
                                if (!this.closeTicketId) return;

                                try {
                                    const res = await fetch(`/api/tickets/${this.closeTicketId}/close`, {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify({})
                                    });
                                    const data = await res.json(); // Parse the response data

                                    if (data.success) {
                                        const ticket = this.tickets.find(t => t.id === this.closeTicketId);
                                        if (ticket) {
                                            ticket.status = 'closed';
                                        }
                                        this.showCloseModal = false;
                                        this.showToast('‚úÖ Ticket wurde erfolgreich geschlossen!', 'success');
                                    } else {
                                        this.showToast('‚ùå Fehler: ' + data.error, 'error');
                                    }
                                } catch (e) {
                                    console.error('Close error:', e);
                                    this.showToast('Fehler beim Schlie√üen', 'error');
                                }
                            },

                            deleteTicket(id) {
                                this.deleteTicketId = id;
                                this.showDeleteModal = true;
                            },

                            async confirmDelete() {
                                if (!this.deleteTicketId) return;

                                try {
                                    const res = await fetch(`/api/tickets/${this.deleteTicketId}`, { method: 'DELETE' });
                                    const data = await res.json();

                                    if (data.success) {
                                        this.tickets = this.tickets.filter(t => t.id !== this.deleteTicketId);
                                        this.showDeleteModal = false;
                                        this.showToast('‚úÖ Ticket wurde permanent gel√∂scht', 'success');
                                    } else {
                                        this.showToast('‚ùå Fehler: ' + data.error, 'error');
                                    }
                                } catch (e) {
                                    console.error('Delete error:', e);
                                    this.showToast('‚ùå Netzwerkfehler', 'error');
                                }
                            },

                            async adminReopen(id) {


                                try {
                                    const res = await fetch(`/api/tickets/${id}/reopen`, { method: 'POST' });
                                    const data = await res.json();

                                    if (data.success) {
                                        this.showToast('‚úÖ Ticket wurde erfolgreich wiederer√∂ffnet!', 'success');
                                        window.location.reload();
                                    } else {
                                        this.showToast('‚ùå Fehler: ' + data.error, 'error');
                                    }
                                } catch (e) {
                                    console.error('Reopen error:', e);
                                    this.showToast('‚ùå Netzwerkfehler', 'error');
                                }
                            },

                            viewTranscript(id) {
                                this.transcriptUrl = `/api/tickets/${id}/transcript?t=${Date.now()}`;
                                this.showTranscriptModal = true;
                                console.log('Opening transcript:', this.transcriptUrl);
                            }
                        }));
                    });
                </script>
                <!-- Toast Notifications -->
                <div class="fixed bottom-4 right-4 z-[100] flex flex-col gap-2 pointer-events-none">
                    <template x-for="toast in toasts" :key="toast.id">
                        <div class="pointer-events-auto transform transition-all duration-300 ease-in-out"
                            x-transition:enter="translate-y-2 opacity-0"
                            x-transition:enter-end="translate-y-0 opacity-100"
                            x-transition:leave="translate-y-2 opacity-0" :class="{
                                'bg-emerald-500/20 text-emerald-300 border-emerald-500/30': toast.type === 'success',
                                'bg-red-500/20 text-red-300 border-red-500/30': toast.type === 'error',
                                'bg-blue-500/20 text-blue-300 border-blue-500/30': toast.type === 'info'
                            }"
                            class="backdrop-blur-md font-medium px-4 py-3 rounded-lg shadow-lg border flex items-center gap-3 min-w-[300px] glass-card">

                            <!-- Icons -->
                            <template x-if="toast.type === 'success'">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                            </template>
                            <template x-if="toast.type === 'error'">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </template>
                            <template x-if="toast.type === 'info'">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </template>

                            <span x-text="toast.message"></span>
                        </div>
                    </template>
                </div>
                <!-- Transcript Modal -->
                <div x-show="showTranscriptModal" class="fixed inset-0 z-50 overflow-y-auto" style="display: none;">
                    <div
                        class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
                        <div x-show="showTranscriptModal" x-transition:enter="ease-out duration-300"
                            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                            x-transition:leave="ease-in duration-200" x-transition:leave-start="opacity-100"
                            x-transition:leave-end="opacity-0" class="fixed inset-0 transition-opacity"
                            aria-hidden="true">
                            <div class="absolute inset-0 bg-slate-900/80 backdrop-blur-sm"></div>
                        </div>

                        <span class="hidden sm:inline-block sm:align-middle sm:h-screen"
                            aria-hidden="true">&#8203;</span>

                        <div x-show="showTranscriptModal" x-transition:enter="ease-out duration-300"
                            x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                            x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                            x-transition:leave="ease-in duration-200"
                            x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                            x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                            class="inline-block align-bottom bg-slate-800 rounded-2xl text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full border border-slate-700/50">

                            <div
                                class="px-6 py-4 border-b border-slate-700/50 flex justify-between items-center bg-slate-800/50">
                                <h3 class="text-lg font-medium text-white">
                                    Live Transkript
                                </h3>
                                <button @click="showTranscriptModal = false"
                                    class="text-slate-400 hover:text-white transition-colors">
                                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>

                            <div class="bg-slate-900/50">
                                <div class="w-full h-[70vh] relative">
                                    <iframe :src="transcriptUrl" class="w-full h-full border-0"
                                        title="Transcript"></iframe>
                                </div>
                            </div>

                            <div class="px-6 py-4 bg-slate-800/50 border-t border-slate-700/50 flex justify-end">
                                <button type="button" @click="showTranscriptModal = false"
                                    class="px-4 py-2 bg-slate-700 text-white rounded-lg hover:bg-slate-600 transition-colors font-medium">
                                    Schlie√üen
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

