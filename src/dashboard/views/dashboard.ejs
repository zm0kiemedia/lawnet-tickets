<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - LawNet Tickets</title>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        @keyframes shine {
            to {
                transform: translateX(100%);
            }
        }

        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</head>

<body class="bg-gray-900 text-gray-100 min-h-screen">

    <!-- Sidebar -->
    <%- include('partials/sidebar', { path: '/dashboard' , user: user }) %>

        <!-- Main Content -->
        <div class="md:ml-64 min-h-screen transition-all duration-300">
            <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10" x-data="{ filter: 'all' }">

                <!-- Header -->
                <div
                    class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10 animate-in fade-in slide-in-from-bottom-4 duration-700">
                    <div>
                        <div class="flex items-center gap-4 mb-2">
                            <img src="/img/logo.png" alt="LawNet Logo" class="h-14 w-auto drop-shadow-md rounded-xl">
                            <div>
                                <h1 class="text-3xl font-bold text-white tracking-tight flex items-center gap-3">
                                    Meine Tickets
                                    <% if (typeof isAdmin !=='undefined' && isAdmin) { %>
                                        <span
                                            class="px-2 py-0.5 bg-amber-500/20 text-amber-400 text-[10px] font-bold rounded border border-amber-500/30 uppercase tracking-widest">
                                            Admin
                                        </span>
                                        <% } %>
                                </h1>
                            </div>
                        </div>
                        <p class="text-slate-400">Verwalte und sieh dir deine Support-Anfragen an</p>
                    </div>
                </div>

                <!-- Filters -->
                <div class="flex bg-slate-800/50 p-1 rounded-xl border border-slate-700/50 self-start md:self-auto">
                    <button @click="filter = 'all'"
                        class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200"
                        :class="filter === 'all' ? 'bg-amber-500 text-white shadow-lg' : 'text-slate-400 hover:text-white'">
                        Alle
                    </button>
                    <button @click="filter = 'open'"
                        class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200"
                        :class="filter === 'open' ? 'bg-green-500 text-white shadow-lg' : 'text-slate-400 hover:text-white'">
                        Offen
                    </button>
                    <button @click="filter = 'closed'"
                        class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200"
                        :class="filter === 'closed' ? 'bg-gray-600 text-white shadow-lg' : 'text-slate-400 hover:text-white'">
                        Geschlossen
                    </button>
                </div>

                <!-- Tickets Section -->
                <div class="mt-8">
                    <% if (tickets.length===0) { %>
                        <div
                            class="flex flex-col items-center justify-center py-20 bg-slate-800/30 rounded-3xl border border-dashed border-slate-700 animate-pulse">
                            <span class="text-6xl mb-4 opacity-50">ðŸ“­</span>
                            <p class="text-xl text-slate-400 font-medium">Keine Tickets gefunden</p>
                            <p class="text-sm text-slate-500 mt-2">Erstelle ein Ticket in Discord, um loszulegen.</p>
                        </div>
                        <% } else { %>
                            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                                <% tickets.forEach((ticket, index)=> { %>
                                    <div class="group relative bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-<%= ticket.status === 'open' ? 'green-500/20' : 'gray-500/10' %> hover:-translate-y-1"
                                        x-show="filter === 'all' || filter === '<%= ticket.status %>'"
                                        x-transition:enter="transition ease-out duration-300"
                                        x-transition:enter-start="opacity-0 scale-95"
                                        x-transition:enter-end="opacity-100 scale-100">

                                        <!-- Left Accent Border -->
                                        <div
                                            class="absolute left-0 top-0 bottom-0 w-1 bg-gradient-to-b <%= ticket.status === 'open' ? 'from-green-400 to-green-600' : 'from-gray-400 to-gray-600' %>">
                                        </div>

                                        <!-- Card Content -->
                                        <div class="p-6 pl-8">
                                            <!-- Header -->
                                            <div class="flex items-start justify-between mb-4">
                                                <div class="flex items-center gap-3">
                                                    <span class="text-2xl">
                                                        <%= ticket.status==='open' ? 'ðŸŸ¢' : 'ðŸ”’' %>
                                                    </span>
                                                    <div>
                                                        <p class="text-xs font-mono text-slate-500">TICKET</p>
                                                        <h3 class="text-lg font-bold text-white">#<%= ticket.id %>
                                                        </h3>
                                                    </div>
                                                </div>
                                                <span
                                                    class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold border <%= ticket.status === 'open' ? 'bg-green-500/10 text-green-400 border-green-500/30' : 'bg-gray-500/10 text-gray-400 border-gray-500/30' %>">
                                                    <span
                                                        class="w-2 h-2 rounded-full mr-2 <%= ticket.status === 'open' ? 'bg-green-400 animate-pulse' : 'bg-gray-400' %>"></span>
                                                    <%= ticket.status==='open' ? 'OFFEN' : 'GESCHLOSSEN' %>
                                                </span>
                                            </div>

                                            <!-- Product Tag -->
                                            <% if (ticket.product) { %>
                                                <div
                                                    class="inline-flex items-center gap-2 px-3 py-1 bg-[#fe8900]/10 border border-[#fe8900]/30 rounded-lg mb-3">
                                                    <svg class="w-3.5 h-3.5 text-[#fe8900]" fill="none"
                                                        stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z">
                                                        </path>
                                                    </svg>
                                                    <span
                                                        class="text-xs font-bold text-[#fe8900] uppercase tracking-wider">
                                                        <%= ticket.product %>
                                                    </span>
                                                </div>
                                                <% } %>

                                                    <!-- Topic/Title -->
                                                    <h4
                                                        class="text-xl font-bold text-white mb-2 group-hover:text-[#fe8900] transition-colors">
                                                        <%= (ticket.topic && ticket.topic.trim()) ? ticket.topic
                                                            : 'Ticket #' + ticket.id %>
                                                    </h4>

                                                    <!-- Details Preview -->
                                                    <% if (ticket.details) { %>
                                                        <p class="text-sm text-slate-400 mb-4 line-clamp-2">
                                                            <%= ticket.details.substring(0, 120) %>
                                                                <%= ticket.details.length> 120 ? '...' : '' %>
                                                        </p>
                                                        <% } %>

                                                            <!-- Divider -->
                                                            <div
                                                                class="h-px bg-gradient-to-r from-transparent via-slate-700 to-transparent my-4">
                                                            </div>

                                                            <!-- Meta Information -->
                                                            <div class="space-y-2 mb-4">
                                                                <!-- Creator -->
                                                                <div class="flex items-center gap-2 text-sm">
                                                                    <svg class="w-4 h-4 text-slate-500" fill="none"
                                                                        stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round" stroke-width="2"
                                                                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                                                        </path>
                                                                    </svg>
                                                                    <span class="text-slate-500">Erstellt von:</span>
                                                                    <span class="font-medium text-slate-300">
                                                                        <%= ticket.user_name || ticket.user_id %>
                                                                    </span>
                                                                </div>

                                                                <!-- Date -->
                                                                <div class="flex items-center gap-2 text-sm">
                                                                    <svg class="w-4 h-4 text-slate-500" fill="none"
                                                                        stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round" stroke-width="2"
                                                                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                                                        </path>
                                                                    </svg>
                                                                    <span class="text-slate-500">
                                                                        <%= new
                                                                            Date(ticket.created_at).toLocaleDateString('de-DE')
                                                                            %>
                                                                    </span>
                                                                    <span class="text-slate-600">â€¢</span>
                                                                    <span class="text-slate-500">
                                                                        <%= new
                                                                            Date(ticket.created_at).toLocaleTimeString('de-DE')
                                                                            %>
                                                                    </span>
                                                                </div>

                                                                <!-- Assignee (if exists) -->
                                                                <% if (ticket.assigned_to) { %>
                                                                    <div class="flex items-center gap-2 text-sm">
                                                                        <svg class="w-4 h-4 text-amber-500" fill="none"
                                                                            stroke="currentColor" viewBox="0 0 24 24">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z">
                                                                            </path>
                                                                        </svg>
                                                                        <span class="text-slate-500">Zugewiesen:</span>
                                                                        <span class="font-medium text-amber-400">
                                                                            <%= ticket.assignee_name ||
                                                                                ticket.assigned_to %>
                                                                        </span>
                                                                    </div>
                                                                    <% } %>
                                                            </div>

                                                            <!-- Divider -->
                                                            <div
                                                                class="h-px bg-gradient-to-r from-transparent via-slate-700 to-transparent mb-4">
                                                            </div>

                                                            <!-- Actions -->
                                                            <div class="flex items-center justify-between">
                                                                <% if (ticket.status==='closed' ) { %>
                                                                    <div class="flex items-center gap-3">
                                                                        <% if (typeof isAdmin !=='undefined' && isAdmin)
                                                                            { %>
                                                                            <button
                                                                                @click="reopenTicket('<%= ticket.id %>')"
                                                                                class="inline-flex items-center gap-2 px-4 py-2 bg-green-500/10 hover:bg-green-500/20 text-green-400 border border-green-500/30 rounded-lg text-sm font-semibold transition-all hover:scale-105">
                                                                                <svg class="w-4 h-4" fill="none"
                                                                                    stroke="currentColor"
                                                                                    viewBox="0 0 24 24">
                                                                                    <path stroke-linecap="round"
                                                                                        stroke-linejoin="round"
                                                                                        stroke-width="2"
                                                                                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                                                                                    </path>
                                                                                </svg>
                                                                                Erneut Ã¶ffnen
                                                                            </button>
                                                                            <% } %>
                                                                                <a href="/tickets/<%= ticket.id %>"
                                                                                    class="inline-flex items-center gap-2 px-4 py-2 bg-[#fe8900]/10 hover:bg-[#fe8900]/20 text-[#fe8900] border border-[#fe8900]/30 rounded-lg text-sm font-semibold transition-all hover:scale-105">
                                                                                    <svg class="w-4 h-4" fill="none"
                                                                                        stroke="currentColor"
                                                                                        viewBox="0 0 24 24">
                                                                                        <path stroke-linecap="round"
                                                                                            stroke-linejoin="round"
                                                                                            stroke-width="2"
                                                                                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z">
                                                                                        </path>
                                                                                        <path stroke-linecap="round"
                                                                                            stroke-linejoin="round"
                                                                                            stroke-width="2"
                                                                                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                                                                                        </path>
                                                                                    </svg>
                                                                                    Verlauf ansehen
                                                                                </a>
                                                                    </div>
                                                                    <% } else { %>
                                                                        <div
                                                                            class="flex items-center gap-2 text-sm text-slate-500">
                                                                            <div
                                                                                class="w-2 h-2 bg-green-400 rounded-full animate-pulse">
                                                                            </div>
                                                                            <span class="font-medium">Aktiv in
                                                                                Discord</span>
                                                                        </div>
                                                                        <% } %>

                                                                            <svg class="w-5 h-5 text-slate-700 group-hover:text-[#fe8900] transform group-hover:translate-x-1 transition-all"
                                                                                fill="none" stroke="currentColor"
                                                                                viewBox="0 0 24 24">
                                                                                <path stroke-linecap="round"
                                                                                    stroke-linejoin="round"
                                                                                    stroke-width="2" d="M9 5l7 7-7 7">
                                                                                </path>
                                                                            </svg>
                                                            </div>
                                        </div>

                                        <!-- Subtle Shine Effect -->
                                        <div
                                            class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent -translate-x-full group-hover:animate-[shine_1.5s_ease-in-out] pointer-events-none">
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                            <% } %>
            </main>
        </div>

        <script>
            async function reopenTicket(id) {
                if (!confirm('MÃ¶chtest du dieses Ticket wirklich erneut Ã¶ffnen?')) return;

                try {
                    const res = await fetch(`/api/tickets/${id}/reopen`, { method: 'POST' });
                    const data = await res.json();

                    if (data.success) {
                        alert('Ticket erfolgreich wiedererÃ¶ffnet! Ein neuer Thread wurde in Discord erstellt.');
                        window.location.reload();
                    } else {
                        alert('Fehler: ' + (data.error || 'Unbekannter Fehler'));
                    }
                } catch (e) {
                    alert('Netzwerkfehler beim Ã–ffnen des Tickets.');
                }
            }
        </script>
</body>

</html>